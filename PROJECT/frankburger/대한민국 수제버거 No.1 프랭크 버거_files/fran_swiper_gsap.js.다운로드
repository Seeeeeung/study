// top10
      var top10_slide = new Swiper(".top10_slide", {
        effect: "coverflow",
		grabCursor: true,
		centeredSlides: true,
        slidesPerView: 2,
		spaceBetween: 0,
        coverflowEffect: {
          rotate: 0,
          stretch: 0,
          depth: 600,
          modifier: 1,
          slideShadows: false,
        },
		loop:true,
		autoplay: {
		delay:2000,
		disableOnInteraction: false,
		},
		speed : 500,
        pagination: {
          el: ".swiper-pagination",
          type: "fraction",
        },
		navigation: {
			prevEl: '.tt_prev',
			nextEl: '.tt_next'
		},
      });

