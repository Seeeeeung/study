// daily_sales
      var daily_sales_slide = new Swiper(".daily_sales_slide", {
        loop: true,
		autoplay: {
		delay:3000,
		disableOnInteraction: false,
		},
		speed : 500,
        pagination: {
          el: ".swiper-pagination",
			    clickable: true,
          type: "fraction",
        },
		navigation: {
			nextEl: '.ds-button-next',
			prevEl: '.ds-button-prev',
		},
      });

	$(".daily_sales_slide").each(function(elem, target){
		var swp = target.swiper;
		$(this).hover(function() {
			swp.autoplay.stop();
		}, function() {
			swp.autoplay.start();
		});
	});

