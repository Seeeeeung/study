//franchise_con
      var bullet = ['가맹절차', '창업비용', '인테리어'];
      var franchise = new Swiper(".franchise", {
		slidesPerView: 1,
		spaceBetween: 0,
		autoplay: {
		delay:3000,
		disableOnInteraction: false,
		},
		loop:true,
		pagination: {
			el: '.swiper-pagination',
			clickable: true,
			renderBullet: function (index, className) {
			return '<div class="' + className + '"><span>' + (bullet[index]) + '</span></div>';
			}
		},

	});
	$(".franchise").each(function(elem, target){
		var swp = target.swiper;
		$(this).hover(function() {
			swp.autoplay.stop();
		}, function() {
			swp.autoplay.start();
		});
	});


